<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomNavigationView">
        <item name="itemIconTint">@color/warm_grey</item>
        <item name="itemTextColor">@color/warm_grey</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="QueryTheme">
        <item name="colorPrimary">@color/query_main</item>
        <item name="colorPrimaryDark">@color/query_status</item>
    </style>

    <style name="TaskTheme">
        <item name="colorPrimary">@color/task_main</item>
        <item name="colorPrimaryDark">@color/task_status</item>
    </style>

    <style name="SettingTheme">
        <item name="colorPrimary">@color/setting_main</item>
        <item name="colorPrimaryDark">@color/setting_status</item>
    </style>

    <style name="Widget.Tjh.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@drawable/nav_icon_tint</item>
        <item name="itemTextColor">@drawable/nav_icon_tint</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Holo.Dialog">
        <!-- 是否有边框 -->
        <item name="android:windowFrame">@null</item>
        <!--是否在悬浮Activity之上  -->
        <item name="android:windowIsFloating">true</item>
        <!--标题  -->
        <item name="android:windowNoTitle">true</item>
        <!--阴影  -->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <!-- 进入和退出的动画 -->
        <item name="android:windowAnimationStyle">@style/MyDialogAnimation</item>
        <!-- 点外边可以消失  -->
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="MyDialogAnimation">
        <!--进入 -->
        <item name="android:windowEnterAnimation">@animator/dialog_enter</item>
        <!--退出-->
        <item name="android:windowExitAnimation">@animator/dialog_exit</item>
    </style>

    <style name="LoadingDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <style name="Filter.Tag" parent="">
        <item name="android:textAppearance">@style/TextAppearance.H5</item>
        <item name="android:background">@drawable/filter_tag_background</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="TextAppearance.H5" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Settings.SwitchContainer" parent="">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?listPreferredItemHeightSmall</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingEnd">?android:listPreferredItemPaddingEnd</item>
        <item name="android:paddingStart">?android:listPreferredItemPaddingStart</item>
    </style>

    <style name="Settings.SwitchLabel" parent="">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="Settings.Switch" parent="">
        <!-- We make the parent view clickable instead for better touch feedback -->
        <item name="android:background">@null</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="Settings.LinkButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:minHeight">?android:listPreferredItemHeightSmall</item>
        <item name="android:paddingEnd">?android:listPreferredItemPaddingEnd</item>
        <item name="android:paddingStart">?android:listPreferredItemPaddingStart</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
