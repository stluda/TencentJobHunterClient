<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_activated="true">
        <objectAnimator
            android:duration="200"
            android:propertyName="translationZ"
            android:valueTo="2dp" />
    </item>

    <item>
        <objectAnimator
            android:duration="160"
            android:propertyName="translationZ"
            android:valueTo="0dp" />
    </item>

</selector>